@model OhNoAir.Models.AccountViewModel


<h1>Register</h1>
<div class="container border" style="padding:20px">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                UserName:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Account.UserName, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Password:
            </div>
            <div class="col-5">
                @Html.PasswordFor(model => model.Account.Password, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    }
</div>

@if(!string.IsNullOrEmpty(Model?.Error)){
    <div class="text-danger">@Model.Error</div>
}

@if(Model?.Success == true){
    <div>Successfully registered!</div>
    <div><a href="/Account/Login">Go to login</a></div>
}